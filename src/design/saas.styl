
/* 平台版 */
.corp-platform-bg
  background: #73C200
.corp-platform-banner-bg
  background-image: linear-gradient(0deg, #ABE300 0%, #73C200 89%)
.corp-platform-text
  color: #73C200
.corp-platform-point-text
  color: #FF8506
.corp-platform-money
  color: #ff8300
.corp-platform-time
  color: #fff
.corp-platform-label
  background: #FF6803
.corp-platform-money-text
  color: #ff8300
  border-1px( #ff8300, 10px)

/* 热团 */
.corp-retuan-bg
  background: #FC4D1A
.corp-retuan-banner-bg
  background-image: linear-gradient(-180deg, #FE8438 0%, #FC4D1A 89%)
.corp-retuan-text
  color: #FC4D1A
.corp-retuan-point-text
  color: #FC4D1A
.corp-retuan-money
  color: #FC4D1A
.corp-retuan-time
  color: #392B00
.corp-retuan-label
  background: #FC4D1A
.corp-retuan-money-text
  color: #FC4D1A
  border-1px( #FC4D1A, 10px)

/* btn */
.lost
  .corp-platform-bg
    background: #73C200
    &:active
      color: #E1F2C9
      background: #9DD44C
  .corp-retuan-bg
    background: #FC4D1A
    &:active
      color: #E1F2C9
      background: #fc4a1a
